{    "languageserver": {
        "ccls": {
          "command": "ccls",
          "args": ["--log-file=/tmp/ccls/logfile", "-v=1"],
          "filetypes": ["c", "cpp", "objc", "objcpp"],
          "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"],
          "initializationOptions": {
             "cache": {
               "directory": "/tmp/ccls"
             },
              "clang": {
                  "extraArgs": ["-isystem", "/home/nathan/ccls/clang+llvm-8.0.0-x86_64-linux-gnu-ubuntu-18.04/include/c++/v1"]
              }
          }
        }
      }
  }
